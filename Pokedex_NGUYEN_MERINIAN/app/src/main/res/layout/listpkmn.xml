<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/idNum"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="#Num"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/idPicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/idNameFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom_du_pokemon"
                android:textColor="#166CED"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/idNameUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom AmÃ©ricain"
                android:textColor="#D64530"/>

            <TextView
                android:id="@+id/idNameJap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Japonais!!!!"
                android:textColor="#D64530"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/idType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Type1" />

                <TextView
                    android:id="@+id/idType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Type2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
